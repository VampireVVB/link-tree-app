#include<stdio.h>
int a[100],top=-1,n;
void push(int);
void pop();
void main()
{
    int i=0,m,r;
    printf("Enter a decimal number\n");
    scanf("%d",&m);
    printf("Enter the base to which it should be converted\n");
    scanf("%d",&n);
    while(m>0)
    {
        r=m%n;
        push(r);
        m=m/n;
    }
    printf("The converted number is\n");
    while(top>-1)
    {
        pop();
    }
}
void push(int x)
{
    top++;
    a[top]=x;
}
void pop()
{
        int x;
        x=a[top];
        top--;
        if((x>9)&&(x<16)&&(n==16))
            printf("%c",(x+55));
        else
            printf("%d",x);
}
